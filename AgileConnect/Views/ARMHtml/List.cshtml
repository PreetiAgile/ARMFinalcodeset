@model IEnumerable<ARMCommon.Model.ARMHtml>
@{
    ViewData["Title"] = "HTML Pages";
}
<div><h1>HTML Definitions</h1> <a asp-action="Create">Create New</a></div>
   <a asp-controller="ARMSignIn" asp-action="SignOut" id="SignOut" class="redirectButton" title="redirectButton"> Sign Out </a>

@if (Model != null && Model.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DefinitionID)
            </th>
           
            <th>
                @Html.DisplayName("Anonymous Access?")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.DefinitionID)</a>
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.AllowAnonymousAccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedOn)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

            
            </td>
        </tr>
}
    </tbody>
</table>

}
else
{
<div class="alert alert-info" role="alert">
    No apps found.
</div>
}
    <div class="col-sm-6"> 
     <a asp-controller="ARMApps" asp-action="List" id="redirectApp" class="redirectButton" title="redirectButton"> View Connected Apps </a>
   </div>

       @section Scripts {

    <style>
 
        a#SignOut {
    position: absolute;
    top: 19px;
    right: 40px;
    font-size: large;
}
    </style>
 
}


