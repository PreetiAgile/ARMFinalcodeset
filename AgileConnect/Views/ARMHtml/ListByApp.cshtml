   </div>*@

@section Scripts {

    <style>

        a#SignOut {
            position: absolute;
            top: 19px;
            right: 40px;
            font-size: large;
        }

        h1#html-data {
            font-size: 20px;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        a {
            text-decoration: none
        }
    </style>

}