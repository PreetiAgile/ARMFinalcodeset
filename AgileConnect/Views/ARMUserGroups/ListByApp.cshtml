@model IEnumerable<ARMCommon.Model.ARMUserGroup>

@{
    ViewData["Title"] = "UserGroupList";
}

<h1 id="user-group">User Group List</h1>
<a asp-controller="ARMSignIn" asp-action="SignOut" id="SignOut" class="redirectButton" title="redirectButton"> Sign Out </a>
@*<p>
    <a asp-action="Create" asp-route-Appname=@ViewBag.result>Create UserGroup</a>

</p>*@

<div class="list-by-app d-flex justify-content-between mt-3 mb-3">
    <div class="back-list">
        <a asp-controller="ARMApps" asp-action="List" id="redirectApp" class="redirectButton btn btn-primary" title="redirectButton">
            <span class="btn-label"> <i class="fa-solid fa-arrow-left"></i></span> Back To List
        </a>
    </div>
    <div class="configure-app">
        <a asp-action="Create" asp-route-Appname=@ViewBag.result id="redirectApp" class="redirectButton btn btn-primary" title="redirectButton">
            <span class="btn-label"><i class="fa-solid fa-users"></i></span> Create User Group
        </a>
    </div>
</div>

<hr />
@if (Model != null && Model.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.AppName)</a>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>

                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="alert alert-info" role="alert">
        UserGroup Not Found
    </div>
}


