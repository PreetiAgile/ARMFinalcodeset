@model ARMCommon.Model.UserModel
@{
    ViewData["Title"] = "Sign In";
}


<font color="@ViewBag.color"> <b>@ViewBag.result</b></font>

<div class="container">
    <main role="main" class="pb-3" id="login-top">
        <div class="login-container">
            <form asp-action="SignIn">
                <div class="text-center">
                    <a class="navbar-brand" asp-area="" asp-controller="ARMInstance" asp-action="Configure">
                        <img src="~/images/user_icon.png" class="rounded" alt="Agile_Connect" width="80px">
                    </a>
                    
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="UserName" class="control-label">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="control-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-4 d-flex justify-content-between">
                    <div class="rember-me">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="validmark" checked="">
                            <label class="form-check-label" for="validmark"> Remember me </label>
                        </div>
                    </div>
                    <div class="forgot-link">
                        <!-- Simple link -->
                        <a asp-controller="ARMSignIn" asp-action="ResetCredential" id="forgetPwd" title="redirectButton">Forgot password?</a>
                    </div>
                </div>
                <div class="mb-4">
                    <input type="submit" value="SignIn" class="btn btn btn-primary w-100 m-0" />
                    @*<a asp-controller="ARMSignIn" asp-action="ResetCredential" class="btn btn-primary" id="forgetPwd" title="redirectButton"> Forget Password </a>*@
                </div>
                <div class="">
                    <span id="dvCopyRight" class="copyrightpara mb-2">Powered by Axpert</span>
                    <span id="axpertVer" class="mb-2 float-end">AgileConnect_11.3.1.0</span>
                </div>
               
            </form>
        </div>

       
      
    </main>
</div>

@section Scripts {
    <style>

        a {
            text-decoration: none;
        }

        .login-container {
            max-width: 400px;
            width: 100%;
            padding: 16px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-left: auto;
            margin-right: auto;
        }

        main#login-top {
            margin-top: 8%;
        }

        label.control-label {
            margin-bottom: 5px;
        }

        p.text-start{
            margin-bottom:0;
        }

        p.text-end {
            margin-bottom: 0;
        }
    </style>
}